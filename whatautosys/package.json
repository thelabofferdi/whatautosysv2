{
    "name": "whatautosys",
    "version": "2.0.0",
    "description": "Agent Commercial Intelligent pour WhatsApp",
    "main": "electron/main.js",
    "scripts": {
        "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
        "backend": "node backend/server.js",
        "frontend": "cd frontend && npm run dev",
        "electron:dev": "concurrently \"npm run backend\" \"cd frontend && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
        "build": "cd frontend && npm run build",
        "package": "npm run build && electron-builder",
        "package-win": "npm run build && electron-builder --win",
        "package-mac": "npm run build && electron-builder --mac",
        "package-linux": "npm run build && electron-builder --linux"
    },
    "dependencies": {
        "@mistralai/mistralai": "^1.3.5",
        "baileys": "^6.7.9",
        "better-sqlite3": "^11.6.0",
        "cors": "^2.8.5",
        "express": "^4.21.2",
        "mammoth": "^1.8.0",
        "multer": "^1.4.5-lts.1",
        "node-machine-id": "^1.1.12",
        "pdf-parse": "^1.1.1",
        "qrcode": "^1.5.4",
        "socket.io": "^4.8.1",
        "uuid": "^11.0.3"
    },
    "devDependencies": {
        "concurrently": "^9.1.0",
        "electron": "^33.2.1",
        "electron-builder": "^25.1.8",
        "wait-on": "^8.0.1"
    },
    "build": {
        "appId": "com.whatautosys.app",
        "productName": "WhatAutosys",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "backend/**/*",
            "frontend/dist/**/*",
            "data/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "deb",
            "icon": "assets/icon.png"
        }
    }
}
